<config
        xmlns='http://www.ehcache.org/v3'
        xmlns:jsr107='http://www.ehcache.org/v3/jsr107'>

    <service>
        <jsr107:defaults>
            <jsr107:cache name="saveCache" template="heap-cache"/>
        </jsr107:defaults>
    </service>

    <cache-template name="heap-cache">
        <expiry>
            <none/>
        </expiry>
        <resources>
            <heap>2000</heap>
            <offheap unit="MB">150</offheap>
        </resources>
    </cache-template>
</config>